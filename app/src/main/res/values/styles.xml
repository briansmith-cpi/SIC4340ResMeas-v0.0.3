<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorAccent">@color/pink_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
    </style>

    <style name="E2HeaderStyleable">
        <item name="android:layout_marginLeft">@dimen/margin_padding_small</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_small</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="E2EditorStyleable">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:digits">0123456789ABCDEF</item>
        <item name="android:ems">3</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
        <item name="android:maxLength">2</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="HorizonLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_small</item>
        <item name="android:background">@color/grey_500</item>
    </style>

    <style name="AppTheme.WithActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="SplashTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="TransparentTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/margin_padding_large</item>
        <item name="android:paddingRight">@dimen/margin_padding_large</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Widget.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">@color/blue_500</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
</resources>
